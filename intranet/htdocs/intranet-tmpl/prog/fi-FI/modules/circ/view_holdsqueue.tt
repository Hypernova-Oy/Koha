 <td class="hq-author">
 <span class="filter_column filter_text">
 <input class="text_filter" placeholder="Tekijä" type="text">
 </span>
 </td>
 <td class="hq-pubdetails">
 <span class="filter_column filter_text">
 <input class="text_filter" placeholder="Tekijä" type="text">
 </span>
 </td>
 <td class="hq-holdingbranch">
 <span class="filter_column filter_text">
 <input class="text_filter" placeholder="Nykyinen kirjasto" type="text">
 </span>
 </td>
 <td class="hq-homebranch">
 <span class="filter_column filter_text">
 <input class="text_filter" placeholder="Kotikirjasto" type="text">
 </span>
 </td>
 <td class="hq-collection">
 <span class="filter_column filter_text">
 <input placeholder="Kokoelma" type="text">
 </span>
 </td>
 <td class="hq-location">
 <span class="filter_column filter_text">
 <input placeholder="Paikka" type="text">
 </span>
 </td>
 <td class="hq-itemtype">
 <span class="filter_column filter_text">
 <input placeholder="Nidetyyppi" type="text">
 </span>
 </td>
 <td class="hq-callnumber">
 <span class="filter_column filter_text">
 <input placeholder="Luokka" type="text">
 </span>
 </td>
 <td class="hq-copynumber">
 <span class="filter_column filter_text">
 <input placeholder="Kappaleen numero" type="text">
 </span>
 </td>
 <td class="hq-enumchron">
 <span class="filter_column filter_text">
 <input placeholder="Numerointi" type="text">
 </span>
 </td>
 <td class="hq-barcode">
 <span class="filter_column filter_text">
 <input placeholder="Viivakoodi" type="text">
 </span>
 </td>
 <td class="hq-patron">
 <span class="filter_column filter_text">
 <input placeholder="Asiakas" type="text">
 </span>
 </td>
 <td class="hq-patroncategory">
 <span class="filter_column filter_text">
 <input placeholder="Asiakastyyppi" type="text">
 </span>
 </td>
 <td class="hq-sendto">
 <span class="filter_column filter_text">
 <input placeholder="Lähetä kohteelle" type="text">
 </span>
 </td>
 <td class="hq-date">
