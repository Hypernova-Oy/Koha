[% SET footerjs = 1 %]
[% PROCESS 'i18n.inc' %]
[% INCLUDE 'doc-head-open.inc' %]
 <title>[% FILTER collapse %]
 [% t("Search") | html %] &rsaquo;
 [% t("Labels") | html %] &rsaquo;
 [% t("Koha") | html %]
 [% END %]</title>
 [% INCLUDE 'doc-head-close.inc' %]
</head>

<body id="labels_search" class="tools labels">
 <div class="main container-fluid">
 [% INCLUDE 'messages.inc' %]

 <h1>Hae niteitä [% IF ( batch_id ) %] jotka lisätään erään [% batch_id | html %] [% END %] </h1>

 <form name="f" method="get" action="/cgi-bin/koha/labels/label-item-search.pl">
 <input type="hidden" name="op" value="do_search" />
 <input type="hidden" name="batch_id" value="[% batch_id | html %]" />
 <input type="hidden" name="type" value="[% type | html %]" />

 <fieldset class="rows">
 <ol>
 <li>
 <select name="idx" > <!-- FIXME: script does keyword search regardless -->
 [% IF idx == 'kw' %]
 <option value="kw" selected="selected">Hakusana</option>
 [% ELSE %]
 <option value="kw">Hakusana</option>
 [% END %]

 [% IF idx == 'au'  %]
 <option value="au" selected="selected">Tekijä</option>
 [% ELSE %]
 <option value="au">Tekijä</option>
 [% END %]

 [% IF idx == 'yr'  %]
 <option value="yr" selected="selected">Julkaisuvuosi</option>
 [% ELSE %]
 <option value="yr">Julkaisuvuosi</option>
 [% END %]

 [% IF idx == 'sn' %]
 <option value="ident" selected="selected">Standardinumero</option>
 [% ELSE %]
 <option value="sn">Standardinumero</option>
 [% END %]

 [% IF idx == 'nb' %]
 <option value="nb" selected="selected">ISBN</option>
 [% ELSE %]
 <option value="nb">ISBN</option>
 [% END %]

 [% IF idx == 'ns' %]
 <option value="ns" selected="selected">ISSN</option>
 [% ELSE %]
 <option value="ns">ISSN</option>
 [% END %]

 [% IF idx == 'lcn,phr' %]
 <option value="lcn,phr" selected="selected">Luokka</option>
 [% ELSE %]
 <option value="lcn,phr">Luokka</option>
 [% END %]

 [% IF idx == 'su' %]
 <option value="su" selected="selected">Asiasana</option>
 [% ELSE %]
 <option value="su">Asiasana</option>
 [% END %]

 [% IF idx == 'ti' %]
 <option value="ti" selected="selected">Nimeke</option>
 [% ELSE %]
 <option value="ti">Nimeke</option>
 [% END %]

 [% IF idx == 'ti,phr' %]
 <option value="ti,phr" selected="selected">Otsikkofraasi</option>
 [% ELSE %]
 <option value="ti,phr">Otsikkofraasi</option>
 [% END %]

 [% IF idx == 'se' %]
 <option value="se" selected="selected">Sarjan nimeke</option>
 [% ELSE %]
 <option value="se">Sarjan nimeke</option>
 [% END %]

 [% IF idx == 'bc' or not idx %]
 <option value="bc" selected="selected">Viivakoodi</option>
 [% ELSE %]
 <option value="bc">Viivakoodi</option>
 [% END %]

 [% IF idx == 'acqdate' %]
 <option value="acqdate" selected="selected">Hankintapäivä</option>
 [% ELSE %]
 <option value="acqdate">Hankintapäivä</option>
 [% END %]
 </select>
 <input class="focus" id="ccl_textbox" name="ccl_textbox" size="30" title="Syötä hakusanat" type="text" value="" />
 </li>
 </ol>
 </fieldset>

 [% IF ( sort_by_loop ) %]
 <fieldset>
 <legend>Järjestä </legend>
 <p>
 <select id="sort_by" name="sort_by">
 <option value="">Kenttäpainotus, osuvuuden mukaan</option>
 [% FOREACH sort_by_loo IN sort_by_loop %]
 [% IF ( sort_by_loo.selected ) %]
 <option value="[% sort_by_loo.value | html %]" selected="selected">[% sort_by_loo.label | html %]</option>
 [% ELSE %]
 <option value="[% sort_by_loo.value | html %]">[% sort_by_loo.label | html %]</option>
 [% END %]
 [% END %]
 </select>
 </p>
 </fieldset>
 [% END %]

 <fieldset class="rows">
 <ol>
 <li>
 <label for="from">Lisäyspvm: </label>
 <input type="text" size="10" id="from" name="datefrom" class="flatpickr" data-date_to="to" value="" />
 <div class="hint">[% INCLUDE 'date-format.inc' %]</div>
 </li>
 <li>
 <label for="to">Lisäyspvm: </label>
 <input type="text" size="10" id="to" name="dateto" class="flatpickr" value="" />
 <div class="hint">[% INCLUDE 'date-format.inc' %]</div>
 </li>
 </ol>
 </fieldset>

 <nav class="navbar navbar-default fixed-bottom">
 <div class="container-fluid">
 <fieldset class="action">
 <input class="btn btn-primary" type="submit" value="Haku" />
 <button type="button" class="btn btn-default close_window">Sulje ikkuna</button>
 </fieldset>
 </div>
 </nav>
 </form>
 </div>

[% MACRO jsinclude BLOCK %]
 [% INCLUDE 'calendar.inc' %]
[% END %]
[% INCLUDE 'intranet-bottom.inc' popup_window=1 %]
