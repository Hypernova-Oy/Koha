[% USE raw %]
[% USE Koha %]
[% USE Asset %]
[% USE Branches %]
[% USE Categories %]
[% USE KohaDates %]
[% PROCESS 'i18n.inc' %]
[% SET footerjs = 1 %]
[% INCLUDE 'doc-head-open.inc' %]
<title>[% FILTER collapse %]
 [% t("Merge patron records") | html %] &rsaquo;
 [% t("Patrons") | html %] &rsaquo;
 [% t("Koha") | html %]
[% END %]</title>
[% INCLUDE 'doc-head-close.inc' %]
[% FILTER collapse %]
 <style>
        ins {
            background-color: #e6ffe6;
        }
        del {
            background-color: #ffe6e6;
        }
        .col0,
        .col1 {
            display: none;
        }
        .col3 ins,
        .col2 del {
            display: none;
        }
        #col-label,
        .col2,
        .col3 {
            border-right: 1px solid #EEE;
            flex-grow: 1;
            margin-right:1em;
        }
        #col-label {
            font-family: monospace;
        }
        #col-label div {
            white-space: none;
        }
        .compare {
            display: flex;
        }
        .modal-lg {
            width: 90%;
        }
    </style>
[% END %]
</head>
<body id="pat_merge" class="pat">
[% WRAPPER 'header.inc' %]
 [% INCLUDE 'patron-search-header.inc' %]
[% END %]

[% BLOCK display_names %]
 [% SWITCH rs %]
 [% CASE 'Accountline'           %]<span>tilirivit</span>
 [% CASE 'ArticleRequest'        %]<span>Artikkelipyynnöt</span>
 [% CASE 'BorrowerAttribute'     %]<span>asiakasmääreet</span>
 [% CASE 'BorrowerDebarment'     %]<span>asiakkaan rajoitukset</span>
 [% CASE 'BorrowerFile'          %]<span>asiakkaan tiedostot</span>
 [% CASE 'BorrowerModification'  %]<span>asiakkaiden tietojen muokkauspyynnöt</span>
 [% CASE 'ClubEnrollment'        %]<span>kerhoon ilmoittautumiset</span>
 [% CASE 'Issue'                 %]<span>lainat</span>
 [% CASE 'ItemsLastBorrower'     %]<span>merkitään niteen viimeisimmäksi lainaajaksi</span>
 [% CASE 'Linktracker'           %]<span>seuratut linkkien avaukset</span>
 [% CASE 'Message'               %]<span>asiakkaan viestit</span>
 [% CASE 'MessageQueue'          %]<span>asiakkaan ilmoitukset</span>
 [% CASE 'OldIssue'              %]<span>edelliset lainat</span>
 [% CASE 'OldReserve'            %]<span>varaukset</span>
 [% CASE 'Rating'                %]<span>arvot</span>
 [% CASE 'Reserve'               %]<span>voimassa olevat varaukset</span>
 [% CASE 'Review'                %]<span>arvostelut</span>
 [% CASE 'Statistic'             %]<span>tilastot</span>
 [% CASE 'SearchHistory'         %]<span>hakuhistoriat</span>
 [% CASE 'Suggestion'            %]<span>hankintaehdotukset</span>
 [% CASE 'TagAll'                %]<span>tunnisteet</span>
 [% CASE 'Virtualshelfcontent'   %]<span>listaa niteet</span>
 [% CASE 'Virtualshelfshare'     %]<span>listaa jaot</span>
 [% CASE 'Virtualshelve'         %]<span>listat</span>
 [% CASE %][% rs | html %]
 [% END %]
[% END %]

[% WRAPPER 'sub-header.inc' %]
 [% WRAPPER breadcrumbs %]
 [% WRAPPER breadcrumb_item %]
 <a href="/cgi-bin/koha/members/members-home.pl">Asiakkaat</a>
 [% END %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Yhdistä asiakastietueita</span>
 [% END %]
 [% END #/ WRAPPER breadcrumbs %]
[% END #/ WRAPPER sub-header.inc %]

<div class="main container-fluid">
 <div class="row">
 <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
 [% INCLUDE 'messages.inc' %]
 <h1>Yhdistä asiakastietueita</h1>

 [% IF op == 'show' %]
 [% IF patrons.count > 1 %]
 [% IF ( patrons.count == 2 ) %]
 <div id="toolbar" class="btn-toolbar">
 <div class="btn-group">
 <button class="btn btn-default" id="compare_patrons">
 <i class="fa fa-arrows-h"></i> Vertaile asiakkaita </button>
 </div>
 </div>
 [% END %]

 <p>Valitse säilytettävä asiakas. Muilta asiakkailta siirretään data valitulle asiakkaalle ja jäljelle jääneet asiakastietueet poistetaan.</p>

 <form method="post" action="merge-patrons.pl" id="patron-merge-form">
 [% INCLUDE 'csrf-token.inc' %]
 <table id="patron-merge-table" class="datatable">
 <thead>
 <tr>
 <th>&nbsp;</th>
 <th>Kortti</th>
 <th>Nimi</th>
 <th>Syntymäaika</th>
 <th>Tyyppi</th>
 <th>Kirjasto</th>
 <th>Vanhenee</th>
 </tr>
 </thead>

 <tbody>
 [% FOREACH p IN patrons %]
 <tr>
 <td><input class="keeper" type="radio" name="keeper" value="[% p.id | html %]" data-borrowernumber="[% p.id | html %]" id="keeper_[% p.id | html %]" /></td>
 <td>
 <label for="keeper_[% p.id | html %]">
 <strong>[% p.cardnumber | html %]</strong>
 </label>
 </td>
 <td>
 <a target="_blank" href="/cgi-bin/koha/members/moremember.pl?borrowernumber=[% p.borrowernumber | uri %]">
 [% INCLUDE 'patron-title.inc' patron = p %]
 <i class="fa-solid fa-window-restore"></i>
 </a>
 </td>
 <td>[% p.dateofbirth | $KohaDates %]</td>
 <td>[% Categories.GetName( p.categorycode ) | html %] ([% p.categorycode | html %])</td>
 <td>[% Branches.GetName( p.branchcode ) | html %]</td>
 <td>[% p.dateexpiry | $KohaDates %]</td>
 [% END %]
 </tbody>
 </table>

 <fieldset class="action">
 [% FOREACH p IN patrons %]
 <input type="hidden" name="id" value="[% p.id | html %]" />
 [% END %]
 <input type="hidden" name="op" value="cud-merge" />
 <input class="btn btn-primary" id="merge-patrons" type="submit" value="Yhdistä asiakkaat" />
 [% PROCESS 'members-patron-selections.inc' id="patron-merge-form" %]
 </fieldset>

 [% ELSE %]
 <div class="alert alert-warning">Virhe: Valitse vähintään kaksi asiakastietuetta yhdistettäväksi</div>
 [% END %]
 </form>
 [% ELSIF op == 'cud-merge' %]
 <h4>Tulokset</h4>
 [% IF error %]
 [% IF error == 'INVALID_KEEPER' %]
 <div class="alert alert-warning">Yhdistäminen epäonnistui! Säilytettävä asiakas oli virheellinen.</div>
 [% ELSE %]
 <div class="alert alert-warning">Yhdistäminen epäonnistui! Seuraavat virheet raportoitiin: [% error | html %].</div>
 [% END %]
 [% ELSIF !results.merged.keys.size %]
 <div class="alert alert-warning">Yhtään sopivaa asiakasta ei löytynyt yhdistettäväksi.</div>
 [% ELSE %]
 <p>
 Asiakastietueet yhdistettiin <a href="moremember.pl?borrowernumber=[% keeper.id | uri %]">[% INCLUDE 'patron-title.inc' patron = keeper %]</a>
 </p>

 [% FOREACH pair IN results.merged.pairs %]
 [% SET patron = pair.value.patron %]

 <h5>[% INCLUDE 'patron-title.inc' %]</h5>

 [% FOREACH r IN pair.value.updated.pairs %]
 [% SET name = r.key %]
 [% SET count = r.value %]
 [% IF count %]
 <p>
 <span>[% count | html %] [% PROCESS display_names rs = name %] siirretty.</span>
 [% IF name == 'Reserve' %]
 <strong>Kannattaa tarkistaa ja ratkaista mahdolliset tuplavaraukset ennen yhdistämistä.</strong>
 [% END %]
 </p>
 [% END %]
 [% END %]
 [% END %]
 [% END %]

 [% UNLESS error %]
 <a class="btn btn-default" href="moremember.pl?borrowernumber=[% keeper.id | html %]">Näytä asiakastietue</a>
 [% END %]
 [% END %]
 </div>
 </div>

 <!-- Modal -->
 <div class="modal" id="compareModal" tabindex="-1" role="dialog" aria-labelledby="compareModalLabel">
 <div class="modal-dialog modal-lg">
 <div class="modal-content">
 <div class="modal-header">
 <h1 class="modal-title" id="compareModalLabel">Vertaile asiakkaita yhdistämistä varten</h1>
 <button aria-label="Sulje" class="btn-close" data-bs-dismiss="modal" type="button"></button>
 </div>
 <div class="modal-body">
 <div class="compare">
 <div id="col-label">
 <div><strong>Nimi:</strong></div>
 <div><strong>Nimikirjaimet:</strong></div>
 <div><strong>Muu nimi:</strong></div>
 <div><strong>Kirjasto:</strong></div>
 <div><strong>Kirjastokortin numero:</strong></div>
 <div><strong>Tyyppi:</strong></div>
 <br />
 <div><strong>Osoiterivi 1:</strong></div>
 <div><strong>Osoiterivi 2:</strong></div>
 <div><strong>Kunta:</strong></div>
 <div><strong>Osavaltio:</strong></div>
 <div><strong>Postinumero:</strong></div>
 <div><strong>Maa:</strong></div>
 <br />
 <div><strong>Rekisteröintipvm:</strong></div>
 <div><strong>Uusintapäivämäärä:</strong></div>
 <div><strong>Vanhenee:</strong></div>
 <div><strong>Syntymäaika:</strong></div>
 <div><strong>Rajoitettu:</strong></div>
 <div><strong>Sähköposti:</strong></div>
 <div><strong>Toissijainen sähköpostiosoite:</strong></div>
 <div><strong>Puhelin:</strong></div>
 <div><strong>Toissijainen puh.nro:</strong></div>
 <div><strong>Muu puhelin:</strong></div>
 <div><strong>Sukupuoli:</strong></div>
 <div><strong>Päivitetty:</strong></div>
 <div><strong>Käyttäjätunnus:</strong></div>
 </div>

 [% FOREACH p IN patrons %]
 <div id="col-[% p.borrowernumber | html %]-orig"class="col[% loop.index | html %]">
<!-- <pre> block is unindented to avoid unwanted whitespace -->
<pre>
[% IF ( p.surname ) %][% p.surname | html %], [% p.firstname | html %][% ELSE %]-[% END %]
[% IF ( p.initials ) %][% p.initials | html %][% ELSE %]-[% END %]
[% IF ( p.othernames ) %][% p.othernames | html %][% ELSE %]-[% END %]
[% IF ( p.branchcode ) %][% p.branchcode | html %][% ELSE %]-[% END %]
[% IF ( p.cardnumber ) %][% p.cardnumber | html %][% ELSE %]-[% END %]
[% IF ( p.categorycode ) %][% p.categorycode | html %][% ELSE %]-[% END %]

[% IF ( p.address ) %][% p.address | html %][% ELSE %]-[% END %]
[% IF ( p.address2 ) %][% p.address2 | html %][% ELSE %]-[% END %]
[% IF ( p.city ) %][% p.city | html %][% ELSE %]-[% END %]
[% IF ( p.state ) %][% p.state | html %][% ELSE %]-[% END %]
[% IF ( p.zipcode ) %][% p.zipcode | html %][% ELSE %]-[% END %]
[% IF ( p.country ) %][% p.country | html %][% ELSE %]-[% END %]

[% IF ( p.dateenrolled ) %][% p.dateenrolled | html %][% ELSE %]-[% END %]
[% IF ( p.date_renewed ) %][% p.date_renewed | html %][% ELSE %]-[% END %]
[% IF ( p.dateexpiry ) %][% p.dateexpiry | html %][% ELSE %]-[% END %]
[% IF ( p.dateofbirth ) %][% p.dateofbirth | html %][% ELSE %]-[% END %]
[% IF ( p.debarred ) %][% p.debarred | html %][% ELSE %]-[% END %]
[% IF ( p.email ) %][% p.email | html %][% ELSE %]-[% END %]
[% IF ( p.emailpro ) %][% p.emailpro | html %][% ELSE %]-[% END %]
[% IF ( p.phone ) %][% p.phone | html %][% ELSE %]-[% END %]
[% IF ( p.phonepro ) %][% p.phonepro | html %][% ELSE %]-[% END %]
[% IF ( p.mobile ) %][% p.mobile | html %][% ELSE %]-[% END %]
[% IF ( p.sex ) %][% p.sex | html %][% ELSE %]-[% END %]
[% IF ( p.updated_on ) %][% p.updated_on | html %][% ELSE %]-[% END %]
[% IF ( p.userid ) %][% p.userid | html %][% ELSE %]-[% END %]
</pre>
 </div>
 [% END %]
 [% FOREACH p IN patrons %]
 <div id="col-[% p.borrowernumber | html %]-diff" class="col[% ( loop.index + 2 ) | html %]"><pre></pre></div>
 [% END %]
 </div>
 </div>
 <div class="modal-footer">
 <button type="button" class="btn btn-default" id="submit-merge-form"><i class="fa fa-compress" aria-hidden="true"></i> Yhdistä asiakkaat</button>
 <button type="button" class="btn btn-default" data-bs-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> Sulje</button>
 </div>
 </div> <!-- /.modal-content -->
 </div> <!-- /.modal-dialog -->
 </div> <!-- /#compareModal -->

[% MACRO jsinclude BLOCK %]
 [% INCLUDE 'str/members-menu.inc' %]
 [% Asset.js("js/members-menu.js") | $raw %]
 [% Asset.js("js/members-patron-selections.js") | $raw %]
 [% Asset.js("lib/jsdiff/jsdiff.min.js") | $raw %]
 <script>
    $(document).ready(function() {
        var controls = $("#merge-patrons, #compare_patrons");
        controls.prop('disabled', true);
        $('#patron-merge-table').on('change', 'input', function() {
            if ( $('.keeper:checked').length > 0 ) {
                controls.prop('disabled', false);
            } else {
                controls.prop('disabled', true);
            }
        });

        $("#compare_patrons").on("click", function(e){
            e.preventDefault();
            $("#compareModal").modal("show");
        });

        $("#compareModal").on("shown.bs.modal", function(){
            /* Find which column is the basis for merging */
            var col0 = $(".keeper:checked").data("borrowernumber");
            var col1 = $(".keeper:not(:checked)").data("borrowernumber");
            /* Get the original patron data for comparison */
            var diff1 = $("#col-" + col0 + "-orig pre").text();
            var diff2 = $("#col-" + col1 + "-orig pre").text();

            var diffs = diffString(diff2, diff1);
            /* Load the diff HTML in the empty columns */
            $(".col2 pre, .col3 pre").html(diffs);
        });

        $("#submit-merge-form").on("click", function(){
            $("#patron-merge-form").submit();
        });
    });

    </script>
[% END %]

[% INCLUDE 'intranet-bottom.inc' %]
