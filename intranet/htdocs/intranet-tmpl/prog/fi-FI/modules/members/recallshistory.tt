[% USE raw %]
[% USE KohaDates %]
[% USE Koha %]
[% USE Asset %]
[% PROCESS 'i18n.inc' %]
[% SET footerjs = 1 %]
[% INCLUDE 'doc-head-open.inc' %]
<title>[% FILTER collapse %]
 [% t("Recalls history for") | html %] [% INCLUDE 'patron-title.inc' %]
 [% t("Patrons") | html %] &rsaquo;
 [% t("Koha") | html %]
[% END %]</title>
[% INCLUDE 'doc-head-close.inc' %]
</head>

<body id="recalls_history" class="pat">
 [% WRAPPER 'header.inc' %]
 [% INCLUDE 'patron-search-header.inc' %]
 [% END %]

 <div id="breadcrumbs">
 <a href="/cgi-bin/koha/mainpage.pl">Etusivu</a> &rsaquo;
 <a href="/cgi-bin/koha/members/members-home.pl">Asiakkaat</a> &rsaquo; Palautuspyyntöhistoria asiakkaalle [% INCLUDE 'patron-title.inc' %] </div>
 <div class="main container-fluid">
 <div class="row">
 <div class="col-md-10 order-md-2 order-sm-1">
 <main>
 [% INCLUDE 'messages.inc' %]
 [% INCLUDE 'members-toolbar.inc' %]
 <h1>Palautuspyyntöhistoria</h1>
 [% IF Koha.Preference('UseRecalls') %]
 <input type="checkbox" id="hide_old" name="hide_old" checked="checked">
 <label for="hide_old">Näytä vanhat palautuspyynnöt</label>
 [% INCLUDE 'recalls.inc' %]
 [% ELSE %]
 <div class="alert alert-info">Palautuspyynnöt eivät ole käytössä. Ota käyttöön <a href="/cgi-bin/koha/admin/preferences.pl?tab=circulation">UseRecalls</a> järjestelmäasetus ottaaksesi käyttöön palautuspyynnöt.</div>
 [% END %]
 </main>
 </div>
 <div class="col-md-2 order-sm-2 order-md-1">
 <aside>
 [% INCLUDE 'circ-menu.inc' %]
 </aside>
 </div>
 </div>

[% MACRO jsinclude BLOCK %]
 [% INCLUDE 'datatables.inc' %]
 [% INCLUDE 'columns_settings.inc' %]
 [% Asset.js("js/recalls.js") | $raw %]
[% END %]

[% INCLUDE 'intranet-bottom.inc' %]
