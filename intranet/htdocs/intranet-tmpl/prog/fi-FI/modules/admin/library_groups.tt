<body id="admin_library_groups" class="admin">
[% WRAPPER 'header.inc' %]
 [% INCLUDE 'cat-search.inc' %]
[% END %]

[% WRAPPER 'sub-header.inc' %]
 [% WRAPPER breadcrumbs %]
 [% WRAPPER breadcrumb_item %]
 <a href="/cgi-bin/koha/admin/admin-home.pl">Ylläpito</a>
 [% END %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Kirjastoryhmät</span>
 [% END %]
 [% END #/ WRAPPER breadcrumbs %]
[% END #/ WRAPPER sub-header.inc %]

<div class="main container-fluid">
 <div class="row">
 <div class="col-md-10 order-md-2 order-sm-1">
 <main>
 [% INCLUDE 'messages.inc' %]
 [% FOR m IN messages %]
 <div class="alert alert-[% m.type | html %]">
 [% SWITCH m.code %]
 [% CASE 'error_on_insert' %]
 <span>Kirjaston lisäämisessä tapahtui virhe. Kirjaston tunnus saattaa jo olla tässä ryhmässä.</span>
 [% CASE %]
 <span>[% m.code | html %]</span>
 [% END %]
 </div>
 [% END %]

 [% IF added %]
 <div class="alert alert-info group-added">
 [% IF added.branchcode %]
 <span>[% added.library.branchname | html | $KohaSpan class = 'name' %] lisätty ryhmään.</span>
 [% ELSE %]
 <span>Ryhmä [% added.title | html | $KohaSpan class = 'name' %] luotu.</span>
 [% END %]
 </div>
 [% ELSIF deleted %]
 <div class="alert alert-info group-deleted">
 [% IF deleted.title %]
 <span>Ryhmä [% deleted.title | html | $KohaSpan class = 'name' %] on poistettu.</span>
 [% ELSE %]
 <span>[% deleted.library | html | $KohaSpan class = 'name' %] on poistettu ryhmästä.</span>
 [% END %]
 </div>
 [% ELSIF error_duplicate_title %]
 <div class="alert alert-warning error-duplicate-group-title">
 [% error_duplicate_title | html | $KohaSpan class = 'name' %] -niminen ryhmä on jo olemassa. </div>
 [% END %]

 <div id="toolbar" class="btn-toolbar">
 <div class="btn-group">
 <a id="add-group-root" class="btn btn-default add-group" href="#">
 <i class="fa fa-plus"></i> Uusi kirjastoryhmä </a>
 </div>
 </div>

 <h1>Kirjastoryhmät</h1>

 [% FOREACH root_group IN root_groups %]
