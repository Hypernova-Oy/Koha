 [% INCLUDE 'csrf-token.inc' %]
 <div class="modal-dialog">
 <div class="modal-content">
 <div class="modal-header">
 <h1 class="modal-title" id="add-group-modal-label">Lisää ryhmä</h1>
 <button aria-label="Sulje" class="btn-close" data-bs-dismiss="modal" type="button"></button>
 </div>
 <div class="modal-body">
 <fieldset class="brief">
 <input type="hidden" id="add-group-modal-parent-id" name="parent_id" value="" />
 <input type="hidden" id="add-group-modal-action" name="op" value="cud-add">
