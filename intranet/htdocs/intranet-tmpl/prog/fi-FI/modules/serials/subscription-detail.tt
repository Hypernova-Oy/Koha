 <h1>Kausijulkaisutilaus [% INCLUDE 'biblio-title.inc' biblio=subscription.biblio link = 0 | $HtmlTags tag="em" %] [% IF subscription.closed %](suljettu)[% END %]</h1>

 [% IF ( abouttoexpire ) %]
 [% UNLESS subscription.closed %]
 <div class="alert alert-info">Kausijulkaisutilaus loppuu [% enddate | html %]. <a href="#" id="renewsub">Uusi tämä kausijulkaisutilaus</a>.</div>
 [% END %]
 [% END %]

 [% IF ( NEEDSCONFIRMATION ) %]
 <div id="circ_needsconfirmation" class="alert alert-warning">
 <h3>Vahvista kausijulkaisutilauksen poisto</h3>

 <ul>
 [% IF ( NOTEXPIRED ) %] <li>Kausijulkaisutilaus ei ole vielä päättynyt</li> [% END %]
 [% IF ( LINKEDISSUES ) %] <li>Tilaukseen on liitetty lehden numeroita</li> [% END %]
 [% IF ( LINKEDITEMS ) %] <li>Kausijulkaisutilaukseen on liitetty niteitä<br /> Näitä niteitä ei poisteta</li> [% END %]
 </ul>

 <form method="post" action="/cgi-bin/koha/serials/subscription-detail.pl">
 [% INCLUDE 'csrf-token.inc' %]
 <input type="hidden" name="subscriptionid" value="[% subscriptionid | html %]" />
 <input type="hidden" name="issueconfirmed" value="1" />
 <input type="hidden" name="op" value="cud-del" />
 <button type="submit" class="btn btn-default approve" accesskey="y"><i class="fa fa-fw fa-check"></i> Kyllä, poista (Y)</button>
 </form>

 <form method="get" action="/cgi-bin/koha/serials/subscription-detail.pl">
 <input type="hidden" name="subscriptionid" value="[% subscriptionid | html %]" />
 <button type="submit" class="btn btn-default deny" accesskey="n"><i class="fa fa-fw fa-times"></i> Ei, älä poista (N)</button>
 </form>
 </div>
 [% END # /IF NEEDSCONFIRMATION %]

 [% IF mana_code.defined %]
 <div id="alert-community" class="alert alert-info">
 <p>
 [% mana_code | html %]
 </p>
 </div>
 [% END %]

 [% WRAPPER tabs id= "subscription_description" %]
 [% WRAPPER tabs_nav %]
 [% WRAPPER tab_item tabname= "subscription_info" bt_active= 1 %] <span>Tiedot</span> [% END %]
 [% WRAPPER tab_item tabname= "subscription_planning" %] <span>Suunnittelu</span> [% END %]
 [% WRAPPER tab_item tabname= "subscription_issues" %] <span>Numeroita</span> [% END %]
 [% WRAPPER tab_item tabname= "subscription_summary" %] <span>Yhteenveto</span> [% END %]
 [% IF orders_grouped.size %]
 [% WRAPPER tab_item tabname= "acquisition_details" %] <span>Hankintatiedot</span> [% END %]
 [% END %]
 [% END # /WRAPPER tabs_nav %]

 [% WRAPPER tab_panels %]
 [% WRAPPER tab_panel tabname="subscription_info" bt_active= 1 %]
 <div class="row">
 <div class="col-sm-6">
 <div class="rows">
 <ol>
 <li><span class="label">Kausijulkaisutilauksen tunnus: </span>[% subscriptionid | html %]</li>
 <li><span class="label">Virkailijatunnus:</span> [% librarian | html %]</li>
 <li><span class="label">Toimittaja:</span> <a href="/cgi-bin/koha/acqui/supplier.pl?booksellerid=[% aqbooksellerid | uri %]">[% aqbooksellername | html %]</a></li>
 <li>
 <span class="label">Nimeketietue:</span>
 [%- INCLUDE 'biblio-title.inc' biblio=subscription.biblio link = 1 -%] <em>([% subscription.biblionumber | html %])</em>
 </li>
 [% IF ( OPACBaseURL ) %]
 <li>
 <span class="label">Verkkokirjasto:</span>
 <a id="view-subscription-in-opac" target="_blank" href="[% Koha.Preference('OPACBaseURL') | url %]/cgi-bin/koha/opac-detail.pl?biblionumber=[% biblionumber | uri %]">Avaa uudessa ikkunassa.</a>
 </li>
 [% END %]
 [% IF ( branchcode ) %]
 <li><span class="label">Kirjasto:</span> [% Branches.GetName( branchcode ) | html %]</li>
 [% END %]
 [% IF ( serialsadditems ) %]
 <li><span class="label">Niteet:</span> Luo nidetietue kausijulkaisua vastaanotettaessa.</li>
 [% ELSE %]
 <li><span class="label">Niteet:</span> Älä luo nidetietuetta kausijulkaisua vastaanotettaessa.</li>
 [% END %]
 <li>
 <span class="label">Numero:</span>
 [% IF skip_serialseq %] Numerointi ohitetaan lisättäessä erikoisnumeroita väliin. [% ELSE %] Numerointi säilytetään lisättäessä erikoisnumeroita väliin. [% END %] </li>
 <li><span class="label">Odotusaika:</span> [% graceperiod | html %]</li>
 </ol>
 </div> <!-- /.rows -->
 </div> <!-- /.col-sm-6 -->
 <div class="col-sm-6">
 <div class="rows">
 <ol>
 [% IF ( location ) %]<li><span class="label">Sijainti:</span> [% location | html %]</li>[% END %]
 [% IF ( callnumber ) %]<li><span class="label">Luokka:</span> [% callnumber | html %]</li>[% END %]
 [% IF ( ccode ) %]<li><span class="label">Kokoelma:</span> [% ccode | html %]</li>[% END %]
 [% IF ( staffdisplaycount ) %]<li><span class="label">Virkailijoille näytettävien numeroiden määrä:</span>[% staffdisplaycount | html %]</li>[% END %]
 [% IF ( opacdisplaycount ) %]<li><span class="label">Näytettävien numeroiden määrä verkkokirjastossa:</span>[% opacdisplaycount | html %]</li>[% END %]
 [% IF ( letter ) %]
 <li>
 <span class="label">Ilmoitus asiakkaalle:</span> [% letter | html %]
 (<a href="/cgi-bin/koha/serials/viewalerts.pl?subscriptionid=[% subscriptionid | uri %]">tilaajat</a>)
 </li>
 [% END %]
 [% IF ( hasRouting ) %]<li><span class="label">Kierto:</span> kyllä</li>[% END %]
 </ol>
 </div> <!-- /.rows -->
 </div> <!-- /.col-sm-6 -->
 </div> <!-- /.row -->

 [% IF available_additional_fields.count %]
 <hr>
 <div class="row">
 <div class="col-sm-6">
 <h3>Muut kentät:</h3>
 <div class="rows">
 <ol>
 [% INCLUDE 'additional-fields-display.inc' available=available_additional_fields values=additional_field_values %]
 </ol>
 </div> <!-- /.rows -->
 </div> <!-- /.col-sm-6 -->
 </div> <!-- /.row -->
 [% END %]
 [% END # /WRAPPER#subscription_info %]

 [% WRAPPER tab_panel tabname="subscription_planning" %]
 <div class="row">
 <div class="col-sm-12">
 <div class="rows">
 <ol>
 <li>
 <span class="label">Alkupvm:</span>
 [% startdate | html %]
 </li>
 <li>
 <span class="label">Ilmestymistiheys:</span>
 [% frequency.description | html %]
 </li>
 <li>
 <span class="label">Käsinsyöttö: </span>
 [% IF ( manualhistory ) %] Käytössä <a href="/cgi-bin/koha/serials/subscription-history.pl?subscriptionid=[% subscriptionid | uri %]">Muokkaa historiaa</a>
 [% ELSE %] poistettu käytöstä [% END %] </li>
 <li>
 <span class="label">Numerointikaava:</span>
 [% numberpattern.label | html %]
 </li>
 <li>
 <table>
 <tr>
 <td>Alkaa:</td>
 [% IF (has_X) %]
 <td>[% lastvalue1 | html %]</td>
 [% END %]
 [% IF (has_Y) %]
 <td>[% lastvalue2 | html %]</td>
 [% END %]
 [% IF (has_Z) %]
 <td>[% lastvalue3 | html %]</td>
 [% END %]
 </tr>
 <tr>
 <td>Jakso vaihtuu:</td>
 [% IF (has_X) %]
 <td>[% numberpattern.whenmorethan1 | html %]</td>
 [% END %]
 [% IF (has_Y) %]
 <td>[% numberpattern.whenmorethan2 | html %]</td>
 [% END %]
 [% IF (has_Z) %]
 <td>[% numberpattern.whenmorethan3 | html %]</td>
 [% END %]
 </tr>
 </table>
 </li>
 [% IF ( irregular_issues ) %]
 <li>
 <span class="label">Epäsäännöllinen:</span>
 [% irregular_issues | html %] numeroa </li>
 [% END %]
 <li>
 <span class="label">Ensimmäinen numero:</span>
 [% firstacquidate | html %]
 </li>
 [% IF ( numberlength ) %]<li>
 <span class="label">Numeroita:</span>
 [% numberlength | html %]</li>
 [% END %]
 [% IF ( weeklength ) %]<li>
 <span class="label">Viikkoja:</span>
 [% weeklength | html %]</li>
 [% END %]
 [% IF ( monthlength ) %]<li>
 <span class="label">Kuukautta:</span>
 [% monthlength | html %]</li>
 [% END %]
 </ol>
 </div> <!-- /.rows -->
 </div> <!-- /.col-sd-12 -->
 </div> <!-- /.row -->
 [% END # /WRAPPER#subscription_planning %]

 [% WRAPPER tab_panel tabname="subscription_issues" %]
 <table>
 <tr>
 <th>Numero</th>
 <th>Arvioitu pvm</th>
 <th>Julkaistu</th>
 <th>Julkaisupäivämäärä (teksti)</th>
 <th>Tila</th>
 </tr>
 [% FOREACH serialslis IN serialslist %]
 <tr>
