[% USE raw %]
[% USE AdditionalContents %]
[% USE Asset %]
[% USE Koha %]
[% USE KohaDates %]
[% USE AuthorisedValues %]
[% USE Branches %]
[% PROCESS 'i18n.inc' %]
[% SET footerjs = 1 %]
[% INCLUDE 'doc-head-open.inc' %]
<title>[% FILTER collapse %]
 [% IF op == 'view' %]
 [% tx("Contents of {list_name}", { list_name = shelf.shelfname }) | html %] &rsaquo;
 [% END %]
 [% IF op == 'add_form' %]
 [% t("Create new list") | html %] &rsaquo;
 [% END %]
 [% IF op == 'edit_form' %]
 [% tx("Edit list {list_name}", { list_name = shelf.shelfname }) | html %] &rsaquo;
 [% END %]
 [% t("Lists") | html %] &rsaquo;
 [% t("Koha") | html %]
[% END %]</title>
[% INCLUDE 'doc-head-close.inc' %]
<style>textarea { width: 100%; }</style>

[% BLOCK list_permissions %]
 <li>
 <label for="allow_changes_from">Salli muutokset sisältöön käyttäjältä: </label>
 <select name="allow_changes_from" id="allow_changes_from" onchange="AdjustRemark()">

 [% IF shelf.allow_change_from_owner %]
 <option value="0">Ei keltään</option>
 [% ELSE %]
 <option value="0" selected="selected">Ei keltään</option>
 [% END %]

 [% IF shelf.allow_change_from_owner && (( !shelf.is_public && !shelf.is_shared ) || !shelf.allow_change_from_others ) %]
 <option value="1" selected="selected">Vain omistaja</option>
 [% ELSE %]
 <option value="1">Vain omistaja</option>
 [% END %]

 [% IF shelf.allow_change_from_permitted_staff %]
 <option value="4" selected="selected">Vain henkilökunta, jolla on käyttöoikeus</option>
 [% ELSE %]
 <option value="4">Vain henkilökunta, jolla on käyttöoikeus</option>
 [% END %]
 [% IF shelf.allow_change_from_staff %]
 <option value="3" selected="selected">Vain henkilökunta</option>
 [% ELSE %]
 <option value="3">Vain henkilökunta</option>
 [% END %]

 [% IF shelf.allow_change_from_others %]
 <option value="2" selected="selected">Kuka tahansa listan katsoja</option>
 [% ELSE %]
 <option value="2">Kuka tahansa listan katsoja</option>
 [% END %]

 </select>
 &emsp; <span id="permitted_staff_remark" style="display:none;color:red;">Koska lista on yksityinen, sitä ei voi asettaa käyttöoikeuksellisen henkilökunnan muokattavaksi.</span>
 &emsp; <span id="staff_remark" style="display:none;color:red;">Koska lista on yksityinen, sitä ei voi asettaa henkilökunnan muokattavaksi.</span>
 &emsp; <span id="anyone_remark" style="display:none;color:red;">Koska lista on yksityinen, sitä ei voi asettaa kenen tahansa muokattavaksi.</span>
 </li>
[% END %]
</head>

<body id="lists_shelves" class="lists">
[% WRAPPER 'header.inc' %]
 [% INCLUDE 'cat-search.inc' %]
[% END %]

[% WRAPPER 'sub-header.inc' %]
 [% WRAPPER breadcrumbs %]
 [% IF op != 'list' %]
 [% WRAPPER breadcrumb_item %]
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl">Listat</a>
 [% END %]
 [% ELSE %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Listat</span>
 [% END %]
 [% END %]

 [% IF shelf AND shelf.is_private %]
 [% IF op == 'view' OR op == 'edit_form' %]
 [% WRAPPER breadcrumb_item %]
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl?op=list&amp;public=0">Listasi</a>
 [% END %]
 [% ELSE %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Listasi</span>
 [% END %]
 [% END %]

 [% ELSIF shelf AND shelf.is_public %]
 [% IF op == 'view' %]
 [% WRAPPER breadcrumb_item %]
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl?op=list&amp;public=1">Julkiset listat</a>
 [% END %]
 [% ELSE %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Julkiset listat</span>
 [% END %]
 [% END %]
 [% END %]

 [% IF op == 'view' %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Sisältö hyllyssä <em>[% shelf.shelfname | html %]</em></span>
 [% END %]
 [% END %]

 [% IF op == 'add_form' %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Luo uusi lista</span>
 [% END %]
 [% END %]

 [% IF op == 'edit_form' %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Muokkaa listaa <em>[% shelf.shelfname | html %]</em></span>
 [% END %]
 [% END %]

 [% IF op == 'transfer' %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Siirrä lista <em>[% shelf.shelfname | html %]</em></span>
 [% END %]
 [% END %]
 [% END #/ WRAPPER breadcrumbs %]
[% END #/ WRAPPER sub-header.inc %]

<div class="main container-fluid">
 <div class="row">
 <div class="col-md-10 offset-md-1">
 <main>
 [% INCLUDE 'messages.inc' %]

 [% IF op != 'transfer' %][% INCLUDE 'virtualshelves-toolbar.inc' %][% END %]

 [% FOR m IN messages %]
 <div class="alert alert-[% m.type | html %]">
 [% SWITCH m.code %]
 [% CASE 'error_on_update' %]
 <span>Listan päivityksessä tapahtui virhe.</span>
 [% CASE 'error_on_insert' %]
 <span>Listan lisäämisessä tapahtui virhe.</span>
 [% CASE 'error_on_delete' %]
 <span>Listan poistossa tapahtui virhe.</span>
 [% CASE 'error_on_add_biblio' %]
 [% IF m.item_barcode %]
 <span>Niteen ([% m.item_barcode | html %]) tietuetta ei lisätty listalle. Tarkista, onko se jo siellä.</span>
 [% ELSE %]
 <span>Nidettä ([% m.bibnum | html %]) ei lisätty listalle. Tarkista, onko se jo siellä.</span>
 [% END %]
 [% CASE 'success_on_update' %]
 <span>Lista päivitetty.</span>
 [% CASE 'success_on_insert' %]
 <span>Lista luotu.</span>
 [% CASE 'success_on_delete' %]
 <span>Lista poistettu.</span>
 [% CASE 'success_on_add_biblio' %]
 [% IF m.item_barcode %]
 <span>Niteen ([% m.item_barcode | html %]) tietue on lisätty listalle.</span>
 [% ELSE %]
 <span>Nide ([% m.bibnum | html %]) on lisätty listalle.</span>
 [% END %]
 [% CASE 'success_on_remove_biblios' %]
 <span>Nimeke on poistettu listalta.</span>
 [% CASE 'does_not_exist' %]
 <span>Tätä listaa ei ole olemassa.</span>
 [% CASE 'item_does_not_exist' %]
 [% IF m.item_barcode %]
 <span>Nidettä ([% m.item_barcode | html %]) ei ole olemassa.</span>
 [% ELSE %]
 <span>Nidettä ([% m.bibnum | html %]) ei ole olemassa.</span>
 [% END %]
 [% CASE 'unauthorized_on_view' %]
 <span>Sinulla ei ole oikeutta nähdä tätä listaa.</span>
 [% CASE 'unauthorized_on_update' %]
 <span>Sinulla ei ole oikeutta päivittää tätä listaa.</span>
 [% CASE 'unauthorized_on_delete' %]
 <span>Sinulla ei ole oikeutta poistaa tätä listaa.</span>
 [% CASE 'unauthorized_on_add_biblio' %]
 <span>Sinulla ei ole oikeutta lisätä nimekettä tähän listaan.</span>
 [% CASE 'unauthorized_transfer' %]
 <span>Sinulla ei ole oikeutta siirtää tämän listan omistajuutta.</span>
 [% CASE 'new_owner_not_found' %]
 <span>Uutta omistajaa ei löytynyt.</span>
 [% CASE 'no_biblio_removed' %]
 <span>Yhtään tietuetta ei poistettu.</span>

 [% CASE 'Koha::Exceptions::Virtualshelf::DuplicateObject' %]
 <span>Listan lisäyksessä tapahtui virhe. Nimi [% shelfname | html %] on jo olemassa.</span>
 [% CASE 'Koha::Exceptions::Virtualshelf::UseDbAdminAccount' %]
 <span>Listaa ei voitu luoda. (Älä käytä tietokannan ylläpitäjän tiliä.)</span>
 [% CASE 'DBIx::Class::Exception' %]
 [% m.msg | html %]

 [% CASE %]
 [% m.code | html %] [% m.msg | html %]
 [% END # /SWITCH %]
 </div>
 [% END # /FOR m IN messages %]

 [% IF op == 'transfer' %]
 <h1>Siirrä julkisen listan [% shelf.shelfname | html %] omistajuus</h1>

 <form action="/cgi-bin/koha/virtualshelves/shelves.pl" id="transferform" method="post">
 [% INCLUDE 'csrf-token.inc' %]
 <fieldset>
 <input type="hidden" name="op" value="cud-transfer" />
 <input type="hidden" name="public" value="1" />
 <input type="hidden" name="shelfnumber" value="[% shelf.shelfnumber | html %]" />

 <div>
 <label for="find_patron">Hae uutta omistajaa: </label>
 <input autocomplete="off" id="find_patron" type="text" style="width:150px" class="noEnterSubmit" />
 </div>

 <br/>
 <div>
 <label for="find_patron">Uusi omistaja: </label>
 <span id="new_owner_name"></span>
 <input type="hidden" id="new_owner" name="new_owner" value="" />
 </div>

 <br/>
 <fieldset class="action">
 <input class="btn btn-primary" type="submit" value="Siirto" />
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl?op=list&amp;public=1" class="cancel">Peruuta</a>
 </fieldset>

 </fieldset>
 </form>
 [% END # /IF op == transfer %]

 [% IF op == 'view' %]
 <h1>Sisältö hyllyssä <em>[% shelf.shelfname | html %]</em></h1>
 [% IF itemsloop %]
 [% SET contents = shelf.get_contents %]
 [% IF ( contents.count ) %]<p>Tässä listassa on [% contents.count | html %] nimekettä</p>[% END %]
 <div class="pages">[% pagination_bar | $raw %]</div>
 <form action="/cgi-bin/koha/virtualshelves/shelves.pl" id="listform" method="post">
 [% INCLUDE 'csrf-token.inc' %]
 <input type="hidden" name="op" value="cud-remove_biblios" />
 <input type="hidden" name="referer" value="view" />
 <input type="hidden" name="shelfnumber" value="[% shelf.shelfnumber | html %]" />

 [% IF direction == 'asc' %]
 [% SET new_direction = 'desc' %]
 [% ELSE %]
 [% SET direction = 'desc' %]
 [% SET new_direction = 'asc' %]
 [% END %]

 [% IF itemsloop %]
 <div id="searchheader" class="searchheader noprint sticky">
 <div id="selection_ops">
 <span class="checkall"></span> |
 <span class="clearall"></span>

 <span class="addto">| </span>
 &nbsp;
 [% IF CAN_user_reserveforothers && Koha.Preference('DisplayMultiPlaceHold') %]
 <div class="btn-group"><button class="btn btn-default btn-xs placehold"><i class="fa-solid fa-bookmark"></i> Varaa</button></div>
 [% END %]
 [% IF can_remove_biblios %]
 <div class="btn-group"><button type="submit" class="btn btn-default btn-xs list-remove"><i class="fa fa-trash-can"></i> Poista valitut</button></div>
 [% END %]
 [% IF ( CAN_user_editcatalogue_edit_catalogue ) %]
 <div class="btn-group"><button type="submit" class="btn btn-default btn-xs merge-items"><i class="fa fa-compress"></i> Yhdistä valitut</button></div>
 [% END %]
 </div>
 </div>
 [% END %]

 <div class="page-section">
 <table id="searchresults" class="dataTable">
 <thead>
 <tr>
 [% IF ( itemsloop ) %]
 <th class="checkall">&nbsp;</th>
 [% END %]
 [% UNLESS ( item_level_itypes ) %]
 <th>Nidetyyppi</th>
 [% END %]
 [% IF sortfield == 'title' %]
 <th class="sorting_[% direction | html %]">
 [% ELSE %]
 <th class="sorting">
 [% END %]
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl?op=view&amp;shelfnumber=[% shelf.shelfnumber | uri %]&amp;sortfield=title&amp;direction=[% IF sortfield != 'title' %]asc[% ELSE %][% new_direction | uri %][% END %]">Nimeke</a>
 </th>
 [% IF sortfield == 'author' %]
 <th class="sorting_[% direction | html %]">
 [% ELSE %]
 <th class="sorting">
 [% END %]
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl?op=view&amp;shelfnumber=[% shelf.shelfnumber | uri %]&amp;sortfield=author&amp;direction=[% IF sortfield != 'author' %]asc[% ELSE %][% new_direction | uri %][% END %]">Tekijä</a>
 </th>
 [% IF sortfield == 'dateadded' %]
 <th class="sorting_[% direction | html %]">
 [% ELSE %]
 <th class="sorting">
 [% END %]
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl?op=view&amp;shelfnumber=[% shelf.shelfnumber | uri %]&amp;sortfield=dateadded&amp;direction=[% IF sortfield != 'dateadded' %]asc[% ELSE %][% new_direction | uri %][% END %]">Lisäyspäivä</a>
 </th>
 [% IF sortfield == 'itemcallnumber' %]
 <th class="sorting_[% direction | html %]">
 [% ELSE %]
 <th class="sorting">
 [% END %]
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl?op=view&amp;shelfnumber=[% shelf.shelfnumber | uri %]&amp;sortfield=itemcallnumber&amp;direction=[% IF sortfield != 'itemcallnumber' %]asc[% ELSE %][% new_direction | uri %][% END %]">Luokka</a>
 </th>
 </tr>
 </thead>
 [% FOREACH itemsloo IN itemsloop %]
 <tr>
 [% IF itemsloop %]
 <td>
 <input type="checkbox" class="selection" value="[% itemsloo.biblionumber | html %]" name="biblionumber" />
 </td>
 [% END %]
 [% UNLESS ( item_level_itypes ) %]
 <td>
 [% UNLESS ( noItemTypeImages || !itemsloo.imageurl ) %]
 <img class="itemtype-image" src="[% itemsloo.imageurl | html %]" alt="[% itemsloo.description | html %]" title="[% itemsloo.description | html %]" />
 [% END %]
 <span class="itypetext">[% itemsloo.description | html %]</span>
 </td>
 [% END %]
 <td>
 [% IF ( itemsloo.XSLTBloc ) %]
 [% itemsloo.XSLTBloc | $raw %]
 [% ELSE %]
 [% INCLUDE 'biblio-title.inc' biblio=itemsloo link = 1 %]
 </a>
 [% END %]
 <p class="hold">
 [% IF ( itemsloo.notforloan ) %]
 <span class="noholdstext">Ei varattavissa</span>
 [% ELSE %]
 [% IF ( itemsloo.ITEM_RESULTS.count ) %]
 <a id="reserve_[% itemsloo.biblionumber | html %]" href="/cgi-bin/koha/reserve/request.pl?biblionumber=[% itemsloo.biblionumber | html %]">Varaukset</a>
 [% IF ( holdfor ) %]
 <span class="holdforlink">| <a href="/cgi-bin/koha/reserve/request.pl?biblionumber=[% itemsloo.biblionumber | uri %]&amp;findborrower=[% holdfor_patron.cardnumber | uri %]">Varaa asiakkaalle [% INCLUDE 'patron-title.inc' patron => holdfor_patron no_title => 1 %]</a></span>
 [% END %]
 [% ELSE %]
 <span class="noholdstext">Ei varattavissa</span>
 [% END %]
 [% END %]
 [% IF ( CAN_user_editcatalogue_edit_catalogue ) %]
 | <a href="/cgi-bin/koha/cataloguing/addbiblio.pl?biblionumber=[% itemsloo.biblionumber | uri %]">Muokkaa tietuetta</a>
 [% END %]
 [% IF ( CAN_user_editcatalogue_edit_items ) %]
 | <a href="/cgi-bin/koha/cataloguing/additem.pl?biblionumber=[% itemsloo.biblionumber | uri %]">Muokkaa niteitä</a>
 [% END %]
 </p>
 </td>
 <td>
 [% itemsloo.author | html %]
 </td>
 <td>
 [% itemsloo.dateadded | $KohaDates%]
 </td>
 <td>
 <ul>
 [% FOREACH item IN itemsloo.ITEM_RESULTS %]
 <li>
 [% Branches.GetName(item.holdingbranch) | html %]
 [% IF ( item.location ) %]
 <span class="shelvingloc">
 [% AuthorisedValues.GetDescriptionByKohaField( kohafield => 'items.location', authorised_value => item.location ) | html %]
 </span>
 [% END %]
 [% IF ( item.itemcallnumber ) %]
 [<a href="/cgi-bin/koha/catalogue/search.pl?idx=callnum&amp;q=%22[% item.itemcallnumber | uri %]%22">[% item.itemcallnumber | html %]</a>]
 [% END %]
 </li>
 [% END # /FOREACH item %]
 </ul>
 </td>
 </tr>
 [% END #/FOREACH itemsloo %]
 </table> <!-- /#searchresults -->
 </div> <!-- /.page-section -->

 <div class="pages">[% pagination_bar | $raw %]</div>
 </form>
 [% END # /IF itemsloop %]
 [% END # /IF op == 'view' %]

 [% IF op == 'add_form' OR op == 'edit_form' %]

 <form method="post" action="/cgi-bin/koha/virtualshelves/shelves.pl" class="validated">
 [% INCLUDE 'csrf-token.inc' %]
 <fieldset class="rows">
 [% IF op == 'add_form' %]
 <legend><h1>Luo uusi lista</h1></legend>
 <input type="hidden" name="op" value="cud-add" />
 [% ELSE %]
 <legend><h1>Muokkaa listaa <em>[% shelf.shelfname | html %]</em></h1></legend>
 <input type="hidden" name="op" value="cud-edit" />
 [% END %]
 <input type="hidden" name="referer" value="[% referer | html %]" />
 <input type="hidden" name="shelfnumber" value="[% shelf.shelfnumber | html %]" />
 <ol>
 <li>
 <label for="shelfname" class="required">Nimi: </label><input type="text" id="shelfname" name="shelfname" size="25" value="[% shelf.shelfname | html %]" required="required" class="focus required" />
 <span class="required">Pakollinen tieto</span>
 </li>
 <li>
 <span class="label">Omistaja: </span>
 [% IF op == 'add_form' %]
 <input type="hidden" name="owner" id="owner" value="[% loggedinusernumber | html %]" />[% logged_in_user.userid | html %]
 [% ELSE %]
 [% IF owner %]
 <input type="hidden" id="owner" name="owner" value="[% owner.borrowernumber | html %]" />[% owner.firstname _ ' ' _ owner.surname | html %]
 [% ELSE %]
 <input type="hidden" id="owner" name="owner" value="[% loggedinusernumber | html %]" />[% logged_in_user.userid | html %]
 [% END %]
 [% END %]
 </li>
 <li>
 <label for="sortfield" >Järjestä lista: </label>
 <select name="sortfield">
 [% IF shelf.sortfield == "title" %]
 <option value="title" selected="selected">Nimeke</option>
 [% ELSE %]
 <option value="title">Nimeke</option>
 [% END %]
 [% IF shelf.sortfield == "author" %]
 <option value="author" selected="selected">Tekijä</option>
 [% ELSE %]
 <option value="author">Tekijä</option>
 [% END %]
 [% IF shelf.sortfield == "copyrightdate" %]
 <option value="copyrightdate" selected="selected">Julkaisuaika</option>
 [% ELSE %]
 <option value="copyrightdate">Julkaisuaika</option>
 [% END %]
 [% IF shelf.sortfield == "itemcallnumber" %]
 <option value="itemcallnumber" selected="selected">Luokka</option>
 [% ELSE %]
 <option value="itemcallnumber">Luokka</option>
 [% END %]
 [% IF shelf.sortfield == "dateadded" %]
 <option value="dateadded" selected="selected">Lisäyspäivä</option>
 [% ELSE %]
 <option value="dateadded">Lisäyspäivä</option>
 [% END %]
 </select>
 </li>
 <li>
 [% IF ( CAN_user_lists_create_public_lists ) %]
 <label for="public">Julkinen: </label>
 <select id="public" name="public" onchange="AdjustRemark()">
 [% IF shelf.is_private %]
 <option value="0" selected="selected">Yksityinen</option>
 [% ELSE %]
 <option value="0">Yksityinen</option>
 [% END %]
 [% IF shelf.is_public %]
 <option value="1" selected="selected">Julkinen</option>
 [% ELSE %]
 <option value="1">Julkinen</option>
 [% END %]
 </select>
 [% ELSE %]
 <label>Julkinen: </label>
 <span>Yksityinen</span>
 <input id="public" name="public" value="0" type="hidden" />
 [% END %]
 </li>
 [% INCLUDE list_permissions %]
 </ol>
 </fieldset>

 <fieldset class="action">
 <input class="btn btn-primary" type="submit" value="Tallenna" />
 [% IF referer == 'view' %]
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl?op=view&amp;shelfnumber=[% shelf.shelfnumber | uri %]" class="cancel">Peruuta</a>
 [% ELSE %]
 [% IF public %]
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl?op=list&amp;public=1" class="cancel">Peruuta</a>
 [% ELSE %]
 <a href="/cgi-bin/koha/virtualshelves/shelves.pl?op=list&amp;public=0" class="cancel">Peruuta</a>
 [% END %]
 [% END %]
 </fieldset>
 </form>
 [% END # /IF op == 'add_form'... %]

 [% IF op == 'list' %]
 <h1>Listat</h1>

 [% WRAPPER tabs id= "tabs" %]
 [% WRAPPER tabs_nav %]
 [% WRAPPER tab_item tabname= "privateshelves_tab" bt_active= 1 %] <span>Listasi</span> [% END %]
 [% IF ( CAN_user_lists_use_public_lists ) %]
 [% WRAPPER tab_item tabname= "publicshelves_tab" %] <span>Julkiset listat</span> [% END %]
 [% END %]
 [% END # /WRAPPER tabs_nav %]

 [% WRAPPER tab_panels %]
 [% WRAPPER tab_panel tabname="shelves_tab" bt_active= 1 %]
 <table id="listresultst">
 <thead>
 <tr>
 <th class="NoVisible">Tyyppi</th>
 <th>Listan nimi</th>
 <th>Sisältää</th>
 <th>Tyyppi</th>
 <th>Omistaja</th>
 <th>Järjestys</th>
 <th>Luontipvm</th>
 <th>Muokkauspvm</th>
 <th class="noExport">Toiminnot</th>
 </tr>
 <tr class="filters_row">
 <th></th>
 <th><input class="filter text_filter" id="searchshelfname_filter" placeholder="Listan nimi"></th>
 <th></th>
 <th></th>
 <th><input class="filter text_filter" id="searchowner_filter" placeholder="Omistaja"></th>
 <th>
 <select class="filter text_filter" id="searchsortby_filter">
 <option value=""></option>
 <option value="title">Nimeke</option>
 <option value="author">Tekijä</option>
 <option value="copyrightdate">Julkaisuaika</option>
 <option value="itemcallnumber">Luokka</option>
 <option value="dateadded">Lisäyspäivä</option>
 </select>
 </th>
 <th></th>
 <th></th>
 <th></th>
 </tr>
 </thead>
 <tbody></tbody>
 </table> <!-- /#listresultst -->
 [% END %]
 [% END # /WRAPPER tab_panels %]
 [% END # /WRAPPER tabs %]

 [%- SET StaffListsHome = AdditionalContents.get( location => "StaffListsHome", lang => lang, library => Branches.GetLoggedInBranchcode ) -%]
 [%- FOREACH block IN StaffListsHome.content -%]
 <div class="page-section">
 [%- block.content | $raw -%]
 </div>
 [%- END -%]
 [% END # /IF op == 'list' %]

 <form id="hold_form" method="get" action="/cgi-bin/koha/reserve/request.pl">
