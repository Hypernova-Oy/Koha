[% USE raw %]
[% USE Koha %]
[% USE Asset %]
[% PROCESS 'i18n.inc' %]
[% SET footerjs = 1 %]
[% INCLUDE 'doc-head-open.inc' %]
<title>[% FILTER collapse %]
 [% IF ( op == 'edit_form' ) %]
 [% t("Rules") | html %] &rsaquo;
 [% END %]
 [% t("Automatic item modifications by age") | html %] &rsaquo;
 [% t("Cataloging") | html %] &rsaquo;
 [% t("Koha") | html %]
[% END %]</title>
[% INCLUDE 'doc-head-close.inc' %]
</head>

<body id="tools_automatic_item_modification_by_age" class="tools">
[% WRAPPER 'header.inc' %]
 [% INCLUDE 'cat-search.inc' %]
[% END %]

[% WRAPPER 'sub-header.inc' %]
 [% WRAPPER breadcrumbs %]
 [% WRAPPER breadcrumb_item %]
 <a href="/cgi-bin/koha/cataloguing/cataloging-home.pl">Katalogisering</a>
 [% END %]

 [% IF ( op == 'edit_form' ) %]
 [% WRAPPER breadcrumb_item %]
 <a href="/cgi-bin/koha/tools/automatic_item_modification_by_age.pl">Automatisk ändring av exemplar baserat på ålder</a>
 [% END %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Regler</span>
 [% END %]
 [% ELSE %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 <span>Automatisk ändring av exemplar baserat på ålder</span>
 [% END %]
 [% END %]
 [% END #/ WRAPPER breadcrumbs %]
[% END #/ WRAPPER sub-header.inc %]

<div class="main container-fluid">
 <div class="row">
 <div class="col-md-10 order-md-2 order-sm-1">
 <main>
 [% INCLUDE 'messages.inc' %]

 [% IF ( op == 'edit_form' ) %]
 <form method="post" id="rules_form" action="/cgi-bin/koha/tools/automatic_item_modification_by_age.pl">
 [% INCLUDE 'csrf-token.inc' %]
 <h1>Regler för automatiska exemplarändringar baserat på ålder</h1>
 <div id="toolbar" class="btn-toolbar sticky">
 <div class="btn-group">
 <button class="btn btn-default add_rule"><i class="fa fa-plus"></i> Lägg till regel</button>
 </div>
 <div class="btn-group">
 <button type="submit" id="save_rules" class="btn btn-default"><i class="fa fa-save"></i> Spara</button>
 </div>
 <div class="btn-group">
 <a class="btn btn-default" href="/cgi-bin/koha/tools/automatic_item_modification_by_age.pl"><i class="fa fa-times"></i> Avbryt</a>
 </div>
 </div>
 [% ELSE %]
 <h1>Automatisk ändring av exemplar baserat på ålder</h1>
 [% IF ( rules ) %]
 <div id="toolbar" class="btn-toolbar">
 <a class="btn btn-default" id="newentry" href="/cgi-bin/koha/tools/automatic_item_modification_by_age.pl?op=edit_form"><i class="fa-solid fa-pencil" aria-hidden="true"></i> Redigera regler</a>
 </div>
 [% ELSE %]
 <div id="toolbar" class="btn-toolbar">
 <a class="btn btn-default" id="newentry" href="/cgi-bin/koha/tools/automatic_item_modification_by_age.pl?op=edit_form"><i class="fa fa-plus"></i> Lägg till regler</a>
 </div>
 [% END %]
 [% END %]

 [% FOR message IN messages %]
 [% IF message.type == "error" %]
 <div class="alert alert-warning">
 [% END %] [% IF message.code == "unable_to_load_configuration" %] Ett fel har inträffat: Kan inte ladda konfiguration. [% END %] </div>
 [% END %]

 [% IF op == 'edit_form' %]
 <div id="edit_rules">
 <div id="rules">
 [% FOR rule IN rules %]
 [% SET id = loop.count %]
 <fieldset class="rule">
 <legend>Regel <span class="rulecount">[% loop.count | html %]</span> <a href="#" class="remove_rule"><i class="fa fa-trash-can"></i> Ta bort denna regel</a></legend>
 <input type="hidden" name="unique_id" value="[% loop.count | html %]" /> <!-- FIXME on update, the unique_id should be filled -->
 <div class="age">
 <h5>Ålder i dagar</h5>
 <input class="age" type="text" inputmode="numeric" pattern="[0-9]*"  value="[% rule.age | html %]" name="age_[% id | html %]" />
 <h5>Fält för ålder</h5>
 <div class="blocks">
 <select name="agefield_[% id | html %]">
 <option value="">Välj ett fält för ålder</option>
 [% FOR field IN agefields.sort %]
 [% IF rule.agefield == field %]
 <option value="[% field | html %]" selected="selected">[% field | html %]</option>
 [% ELSE %]
 <option value="[% field | html %]">[% field | html %]</option>
 [% END %]
 [% END %]
 </select>
 <span class="hint">Om det inte sätts kommer items.dateaccessioned att användas</span>
 </div>
 </div>
 <div class="blocks">
 <h5>Villkor</h5>
 [% FOR condition IN rule.conditions %]
 <div class="block">
 <select name="condition_field_[% id | html %]">
 <option value="">Välj ett fältnamn</option>
 [% FOR field IN condition_fields.sort %]
 [% IF condition.field == field %]
 <option value="[% field | html %]" selected="selected">[% field | html %]</option>
 [% ELSE %]
 <option value="[% field | html %]">[% field | html %]</option>
 [% END %]
 [% END %]
 </select>
 =
 <input type="text" value="[% condition.value | html %]" name="condition_value_[% id | html %]" />
 <a class="add_block" href="#"><i class="fa fa-plus"></i> Lägg till ett villkor</a>
 <a class="remove_block" href="#"><i class="fa fa-trash-can"></i> Ta bort villkor</a>
 </div>
 [% END %]
 </div>
 <div class="blocks">
 <h5>Ersättningar</h5>
 [% FOR substitution IN rule.substitutions %]
 <div class="block">
 <select class="required" required="required" name="substitution_field_[% id | html %]">
 <option value="">Välj ett fältnamn</option>
 [% FOR field IN substitution_fields.sort %]
 [% IF substitution.field == field %]
 <option value="[% field | html %]" selected="selected">[% field | html %]</option>
 [% ELSE %]
 <option value="[% field | html %]">[% field | html %]</option>
 [% END %]
 [% END %]
 </select>
 =
 <input type="text" value="[% substitution.value | html %]" name="substitution_value_[% id | html %]" />
 <a class="add_block" href="#"><i class="fa fa-plus"></i> Lägg till en ersättning</a>
 <a class="remove_block" href="#"><i class="fa fa-trash-can"></i> Ta bort ersättning</a>
 <span class="required">Ett fältnamn är obligatoriskt</span>
 </div>
 [% END %]
 </div>
 </fieldset>
 [% END %]
 </div>
 <input type="hidden" name="op" value="cud-update" />
 </div>
 </form>

 <div id="norules" class="alert alert-info">
 Inga regler är definierade. </div>

 <fieldset id="new_rule">
 <legend>Regel <span class="rulecount"></span> <a href="#" class="remove_rule"><i class="fa fa-trash-can"></i> Ta bort denna regel</a></legend>
 <input type="hidden" name="unique_id" />
 <div class="age">
 <h5>Ålder i dagar</h5>
 <input class="age" type="text" inputmode="numeric" pattern="[0-9]*" value="" name="age" />
 <h5>Fält för ålder</h5>
 <div class="block">
 <select name="agefield">
 <option value="">Välj ett fält för ålder</option>
 [% FOR field IN agefields.sort %]
 <option value="[% field | html %]">[% field | html %]</option>
 [% END %]
 </select>
 <span class="hint">Om det inte sätts kommer items.dateaccessioned att användas</span>
 </div>
 </div>
 <div class="blocks">
 <h5>Villkor</h5>
 <div class="block">
 <select name="condition_field">
 <option value="">Välj ett fältnamn</option>
 [% FOR field IN condition_fields.sort %]
 <option value="[% field | html %]">[% field | html %]</option>
 [% END %]
 </select>
 =
 <input type="text" value="" name="condition_value" />
 <a class="add_block" href="#"><i class="fa fa-plus"></i> Lägg till ett villkor</a>
 <a class="remove_block" href="#"><i class="fa fa-trash-can"></i> Ta bort villkor</a>
 </div>
 </div>
 <div class="blocks">
 <h5>Ersättningar</h5>
 <div class="block">
 <select required="required" class="required" name="substitution_field">
 <option value="">Välj ett fältnamn</option>
 [% FOR field IN substitution_fields.sort %]
 <option value="[% field | html %]">[% field | html %]</option>
 [% END %]
 </select>
 =
 <input type="text" value="" name="substitution_value" />
 <a class="add_block" href="#"><i class="fa fa-plus"></i> Lägg till en ersättning</a>
 <a class="remove_block" href="#"><i class="fa fa-trash-can"></i> Ta bort ersättning</a>
 <span class="required">Ett fältnamn är obligatoriskt</span>
 </div>
 </div>
 </fieldset>
 [% ELSIF rules %]
 <div>
 <h4>Lista med regler</h4>

 <div class="page-section">
 <table id="rulest">
 <thead>
 <tr>
 <th>Ålder</th>
 <th>Fält för ålder</th>
 <th>Villkor</th>
 <th>Ersättningar</th>
 </tr>
 </thead>
 <tbody>
 [% FOR rule IN rules %]
 <tr>
 <td>
 [% IF rule.age.defined and rule.age.length > 0 %]
 <span>[% rule.age | html %] dagar</span>
 [% ELSE %]
 <span>Det finns ingen ålder för denna regel.</span>
 [% END %]
 </td>
 <td>
 [% IF rule.agefield %]
 [% rule.agefield | html %]
 [% ELSE %]
 <!-- In case old rules do not contain an agefield value display that items.dateaccessioned will be used -->
 items.dateaccessioned
 [% END %]
 </td>
 <td>
 [% FOR condition IN rule.conditions %]
 [% IF condition.field %]
 <div class="block">
 [% condition.field | html %] = [% condition.value | html %]
 </div>
 [% ELSE %] Det finns inget villkor för denna regel. [% END %] [% END %] </td>
 <td>
 [% FOR substitution IN rule.substitutions %]
 <div class="block">
 [% substitution.field | html %] = [% substitution.value | html %]
 </div>
 [% END %]
 </td>
 </tr>
 [% END %]
 </tbody>
 </table>
 </div> <!-- /.page-section -->
 </div>
 [% ELSE %]
 <div class="alert alert-info">
 Inga regler är definierade. </div>
 [% END %]

 </main>
 </div> <!-- /.col-md-10.order-md-2 -->

 <div class="col-md-2 order-sm-2 order-md-1">
 <aside>
 [% INCLUDE 'cat-menu.inc' %]
 </aside>
 </div> <!-- /.col-md-2.order-md-1 -->
 </div> <!-- /.row -->

[% MACRO jsinclude BLOCK %]
 [% Asset.js("js/automatic_item_modification_by_age.js") | $raw %]
 [% IF op == 'edit_form' %]
 <script>
            $(document).ready(function() {
                  [% IF rules.size > 0 %]
                      $("#norules").hide();
                  [% ELSE %]
                      $("#rules").show();
                  [% END %]
            });
        </script>
 [% END %]
[% END %]

[% INCLUDE 'intranet-bottom.inc' %]
