 </div> <!-- /.modal -->

 [% IF add_form or copy_form %]
 <div class="main container-fluid">
 <div class="row">
 <div class="col-md-8 offset-md-2">
 [% ELSE %]
 <div class="main container-fluid">
 <div class="row">
 <div class="col-md-10 order-md-2 order-sm-1">
 <main>
 [% INCLUDE 'messages.inc' %]
 [% END %]

 [% IF ( no_op_set ) %]
