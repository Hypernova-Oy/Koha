 </ul>
 </div>
 </div> <!-- /#toolbar -->

 [% IF ( search ) %]
 <p>Du sökte efter <strong>[% searchfield | html %]</strong></p>
 [% END %]

 [% IF ( letter && !independant_branch) %]
 [% select_for_copy = BLOCK %]
 <select name="branchcode">
 [% FOREACH l IN Branches.all() %]
 <option value="[% l.branchcode | html %]">Kopiera till [% l.branchname | html %]</option>
 [% END %]
 </select>
 [% END %]
 [% END %]

 [% IF letter %]
 <div class="page-section">
 <table id="lettert">
 <thead>
 <tr>
 <th>Bibliotek</th>
 <th>Modul</th>
 <th>Kod</th>
 <th>Namn</th>
 <th>Senast uppdaterad</th>
 <th class="NoSort noExport">Kopiera meddelande</th>
 <th class="NoSort noExport">Åtgärder</th>
 </tr>
 </thead>
 <tbody>
 [% FOREACH lette IN letter %]
 [% can_edit = lette.branchcode || !independant_branch %]
 <tr>
 <td>
 [% IF lette.branchname %]
 [% lette.branchname | html %]
 [% ELSE %]
 <span>Alla bibliotek</span>
 [% END %]
 </td>
 <td>
 [% SWITCH lette.module %]
 [% CASE 'acquisition' %]<span>Inköp</span>
 [% CASE 'catalogue' %]<span>Katalog</span>
 [% CASE 'circulation' %]<span>Cirkulation</span>
 [% CASE 'orderacquisition' %]<span>Beställ inköp</span>
 [% CASE 'claimacquisition' %]<span>Reklamera inköp</span>
 [% CASE 'claimissues' %]<span>Reklamera nummer av periodika</span>
 [% CASE 'reserves' %]<span>Reservationer</span>
 [% CASE 'ill' %]<span>Fjärrlån</span>
 [% CASE 'lists' %]<span>Listor</span>
 [% CASE 'members' %]<span>Låntagare</span>
 [% CASE 'patron_slip' %]<span>Låntagare (eget kvitto)</span>
 [% CASE 'add_message' %]<span>Låntagare (anpassat meddelande)</span>
 [% CASE 'preservation' %]<span>Bokvård</span>
 [% CASE 'serial' %]<span>Serie (ny utgåva)</span>
 [% CASE 'suggestions' %]<span>Förslag</span>
 [% CASE 'pos' %]<span>Försäljningsställe</span>
 [% CASE 'report' %]<span>Rapporter</span>
 [% CASE 'bookings' %]<span>Bokningar</span>
 [% CASE %]<span>[% lette.module | html %]</span>
 [% END %]
 </td>
 <td>[% lette.code | html %]</td>
 <td>[% lette.name | html %]</td>
 <td data-order="[% lette.updated_on | html %]">[% lette.updated_on | $KohaDates with_hours = 1 %]</td>
 <td class="actions">
 [% IF !independant_branch || !lette.branchcode %]
 <form method="post" action="/cgi-bin/koha/tools/letter.pl">
 [% INCLUDE 'csrf-token.inc' %]
 <input type="hidden" name="op" value="cud-copy_form" />
 <input type="hidden" name="oldbranchcode" value="[% lette.branchcode | html %]" />
 <input type="hidden" name="module" value="[% lette.module | html %]" />
 <input type="hidden" name="code" value="[% lette.code | html %]" />
 [% IF independant_branch %]
 <input type="hidden" name="branchcode" value="[% independant_branch | html %]" />
 [% ELSE %]
 [% select_for_copy | $raw %]
 [% END %]
 <button class="btn btn-default btn-xs"><i class="fa-solid fa-copy"></i> Kopiera</button>
 </form>
 [% END # /IF !independent_branch %]
 </td>
 <td class="actions">
 [% IF can_edit %]
 <a class="btn btn-default btn-xs" href="/cgi-bin/koha/tools/letter.pl?op=add_form&amp;branchcode=[% lette.branchcode | html %]&amp;module=[% lette.module | html %]&amp;code=[% lette.code | html %]"><i class="fa-solid fa-pencil" aria-hidden="true"></i> Redigera</a>
 [% END %]
 [% IF !lette.protected && can_edit %]
 <a class="btn btn-default btn-xs" href="/cgi-bin/koha/tools/letter.pl?op=delete_confirm&amp;branchcode=[% lette.branchcode | html %]&amp;module=[% lette.module | html %]&amp;code=[% lette.code | html %]"><i class="fa fa-trash-can"></i> Ta bort</a>
 [% END %]
 </td>
 </tr>
 [% END # /FOREACH lette %]
 </tbody>
 </table> <!-- /#lettert -->
 </div><!-- /.page-section -->
 [% ELSE # IF lette %]
 <div class="alert alert-info">
 [% IF ( branchcode ) %]
 <p>Det finns inga meddelanden för detta bibliotek.</p>
 [% ELSE %]
 <p>Det finns inga meddelanden.</p>
 [% END %]
 </div>
 [% END # /IF lette %]
 [% END # /IF no_op_set %]

 [% IF add_form or copy_form %]
 <h1>
 [% IF ( modify ) %]
 <span>Redigera meddelande</span>
 [% ELSE %]
 <span>Nytt meddelande</span>
 [% END %]
 </h1>

 <div id="toolbar" class="btn-toolbar sticky">
 <div class="btn-group">
 <button class="btn btn-primary" id="submit_form"><i class="fa fa-save"></i> Spara</button>
 <button class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"></button>
 <ul class="dropdown-menu dropdown-menu-end">
 <li><a class="dropdown-item" id="saveandcontinue" href="#">Spara och fortsätt redigera</a></li>
 </ul>
 </div>
 <a class="btn btn-default cancel" href="/cgi-bin/koha/tools/letter.pl"><i class="fa fa-times"></i> Avbryt</a>
 </div> <!-- /#toolbar -->

 <form id="add_notice" name="Aform" method="post" enctype="multipart/form-data" class="validate">
 [% INCLUDE 'csrf-token.inc' %]
 [% IF add_form %]
 <input type="hidden" name="op" id="op" value="cud-add_validate" />
 [% ELSE %]
 <input type="hidden" name="op" id="op" value="cud-copy_validate" />
 [% END %]

 <input type="hidden" name="checked" value="0" />

 [% IF ( modify ) %]
 <input type="hidden" name="add" value="0" />
 [% ELSE %]
 <input type="hidden" name="add" value="1" />
 [% END %]

 <fieldset class="rows page-section">
 <input type="hidden" name="oldbranchcode" value="[% oldbranchcode | html %]" />
 [% IF independant_branch %]
 <input type="hidden" name="branchcode" value="[% independant_branch | html %]" />
 <ol>
 [% ELSE %]
 <ol>
 <li>
 [% IF adding %]
 <label for="branch">Bibliotek:</label>
 <select name="branchcode" id="branch" style="width:20em;">
 <option value="">Alla bibliotek</option>
 [% PROCESS options_for_libraries libraries => Branches.all( selected => branchcode ) %]
 </select>
 [% ELSE %]
 <span class="label">Bibliotek:</span>
 <input type="hidden" id="branch" name="branchcode" value="[% branchcode | html %]" />
 [% IF ( branchcode ) %]
 [% Branches.GetName( branchcode ) | html %]
 [% ELSE %]
 <span>Alla bibliotek</span>
 [% END %]
 [% END %]
 </li>
 [% END # /IF independant_branch %]
 <li>
 <label for="newmodule">Koha-modul:</label>
 <input type="hidden" name="oldmodule" value="[% module | html %]" />
 [% IF adding  %]
 <select name="module" id="newmodule">
 [% ELSE %]
 <select name="module" id="module">
 [% END %]
 [% IF ( module == "acquisition" ) %]
 <option value="acquisition" selected="selected">Inköp</option>
 [% ELSE %]
 <option value="acquisition" >Inköp</option>
 [% END %]
 [% IF ( module == "catalogue" ) %]
 <option value="catalogue" selected="selected">Katalog</option>
 [% ELSE %]
 <option value="catalogue" >Katalog</option>
 [% END %]
 [% IF ( module == "circulation" ) %]
 <option value="circulation" selected="selected">Cirkulation</option>
 [% ELSE %]
 <option value="circulation">Cirkulation</option>
 [% END %]
 [% IF ( module == "orderacquisition" ) %]
 <option value="orderacquisition" selected="selected">Beställ inköp</option>
 [% ELSE %]
 <option value="orderacquisition">Beställ inköp</option>
 [% END %]
 [% IF ( module == "claimacquisition" ) %]
 <option value="claimacquisition" selected="selected">Reklamera inköp</option>
 [% ELSE %]
 <option value="claimacquisition">Reklamera inköp</option>
 [% END %]
 [% IF ( module == "claimissues" ) %]
 <option value="claimissues" selected="selected">Reklamera nummer av periodika</option>
 [% ELSE %]
 <option value="claimissues">Reklamera nummer av periodika</option>
 [% END %]
 [% IF ( module == "reserves" ) %]
 <option value="reserves" selected="selected">Reservationer</option>
 [% ELSE %]
 <option value="reserves">Reservationer</option>
 [% END %]
 [% IF ( module == "ill" ) %]
 <option value="ill" selected="selected">Fjärrlån</option>
 [% ELSE %]
 [% IF ( module == "lists" ) %]
 <option value="lists" selected="selected">Listor</option>
 [% ELSE %]
 <option value="lists">Listor</option>
 [% END %]
 <option value="ill">Fjärrlån</option>
 [% END %]
 [% IF ( module == "members" ) %]
 <option value="members" selected="selected">Låntagare</option>
 [% ELSE %]
 <option value="members">Låntagare</option>
 [% END %]
 [% IF ( module == "patron_slip" ) %]
 <option value="patron_slip" selected="selected">Låntagare (eget kvitto)</option>
 [% ELSE %]
 <option value="patron_slip">Låntagare (eget kvitto)</option>
 [% END %]
 [% IF ( module == "add_message" ) %]
 <option value="add_message" selected="selected">Låntagare (anpassat meddelande)</option>
 [% ELSE %]
 <option value="add_message">Låntagare (anpassat meddelande)</option>
 [% END %]
 [% IF ( module == "preservation" ) %]
 <option value="preservation" selected="selected">Bokvård</option>
 [% ELSE %]
 <option value="preservation">Bokvård</option>
 [% END %]
 [% IF ( module == "serial" ) %]
 <option value="serial" selected="selected">Serie (ny utgåva)</option>
 [% ELSE %]
 <option value="serial">Serie (ny utgåva)</option>
 [% END %]
 [% IF ( module == "suggestions" ) %]
 <option value="suggestions" selected="selected">Förslag</option>
 [% ELSE %]
 <option value="suggestions">Förslag</option>
 [% END %]
 [% IF ( module == "pos" ) %]
 <option value="pos" selected="selected">Försäljningsställe</option>
 [% ELSE %]
 <option value="pos">Försäljningsställe</option>
 [% END %]
 [% IF ( module == "report" ) %]
 <option value="report" selected="selected">Rapporter</option>
 [% ELSE %]
 <option value="report">Rapporter</option>
 [% END %]
 [% IF ( module == "bookings" ) %]
 <option value="bookings" selected="selected">Bokningar</option>
 [% ELSE %]
 <option value="bookings" >Bokningar</option>
 [% END %]
 </select>
 </li>
 <li>
 [% IF adding %]
 <label for="code" class="required">Kod:</label>
 <input type="text" id="code" name="code" size="20" maxlength="20" value="" required="required"/>
 <span class="required">Obligatoriskt</span>
 [% ELSE %]
 <span class="label">Kod:</span>
 <input type="hidden" id="code" name="code" value="[% code | html %]" />
 [% code | html %]
 [% END %]
 </li>
 <li>
 <label for="name" class="required">Namn:</label>
 <input type="text" id="name" name="name" size="60" value="[% letter_name | html %]" required="required" />
 <span class="required">Obligatoriskt</span>
 </li>
 [% IF code and preview_is_available%]
 <li>
 <label for="name">Förhandsvisning:</label>
 [% SWITCH code %]
 [% CASE 'CHECKIN' %]
 <input id="data_preview" name="data_preview" placeholder="streckkod" type="text" value="" />
 [% CASE 'CHECKOUT' %]
 <input id="data_preview" name="data_preview" placeholder="streckkod|låntagar-id" type="text" value="" />
 [% CASE 'HOLD_SLIP' %]
 <input type="text" id="data_preview" name="data_preview" value="" placeholder="biblionumber|borrowernumber" />
 [% CASE %]
 <span>Stöds inte ännu.</span>
 [% END %]
 </li>
 [% END # /IF code %]
 </ol>
 </fieldset> <!-- /#add_notice -->

 [% IF Koha.Preference('TranslateNotices') %]
 <div style="clear:both"></div>
 [% WRAPPER tabs id= "tabs" %]
 [% WRAPPER tabs_nav %]
 [% WRAPPER tab_item tabname= "lang_default" %] <span>Standard</span> [% END %]
 [% FOR language IN languages %]
 [% FOR sublanguage IN language.sublanguages_loop %]
 [% IF language.plural %]
 [% WRAPPER tab_item tabname= "lang_${sublanguage.rfc4646_subtag}" %] [% sublanguage.native_description | html %] [% sublanguage.region_description | html %] ([% sublanguage.rfc4646_subtag | html %]) [% END %]
 [% ELSE %]
 [% WRAPPER tab_item tabname= "lang_${sublanguage.rfc4646_subtag}" %] [% sublanguage.native_description | html %] ([% sublanguage.rfc4646_subtag | html %]) [% END %]
 [% END %]
 [% END %]
 [% END %]
 [% END # /.tabs_nav %]

 [% WRAPPER tab_panels %]
 [% FOREACH lang IN letters.keys %]
 [% WRAPPER tab_panel tabname="lang_${lang}" %]
 [% IF lang == 'default' %]
 <p><span class="label">Standardspråk:</span> [% default_language | html %]</p>
 [% END %]
 [% PROCESS message_templates %]
 [% END # /WRAPPER tab_panel %]
 [% END # /FOREACH lang %]
 [% END # /WRAPPER tab_panels %]
 [% END # /WRAPPER tabs#tabs %]
 [% ELSE %]
 <div style="clear:both"></div>
 <div class="page-section">
 [% FOREACH lang IN letters.keys %]
 [% IF lang == 'default' %]
 <p><span class="label">Standardspråk:</span> [% default_language | html %]</p>
 [% END %]
 [% PROCESS message_templates %]
 [% END # /FOREACH lang %]
 </div>
 [% END # /IF TranslateNotices %]

 <input type="hidden" id="redirect" name="redirect" value="" />
