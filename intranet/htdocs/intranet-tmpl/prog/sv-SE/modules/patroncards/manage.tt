[% USE raw %]
[% USE Koha %]
[% USE CGI %]
[% PROCESS 'i18n.inc' %]
[% SET footerjs = 1 %]
[% BLOCK translate_card_element %]
[%-  SWITCH element -%]
[%-  CASE 'layout'    -%][% t('layout') | html %]
[%-  CASE 'Layouts'   -%][% t('Patron card layouts') | html %]
[%-  CASE 'template'  -%][% t('template') | html %]
[%-  CASE 'Templates' -%][% t('Patron card templates') | html %]
[%-  CASE 'profile'   -%][% t('profile') | html %]
[%-  CASE 'Profiles'  -%][% t('Patron card printer profiles') | html %]
[%-  CASE 'batch'     -%][% t('batch') | html %]
[%-  CASE 'Batches'   -%][% t('Patron card batches') | html %]
[%-  CASE 'Actions'   -%][% t('Actions') | html %]
[%-  END -%]
[% END %]
[% BLOCK translate_card_elements %]
[%-  SWITCH element -%]
[%-  CASE 'layout'    -%]<span>layouter</span>
[%-  CASE 'template'  -%]<span>mallar</span>
[%-  CASE 'profile'   -%]<span>profiler</span>
[%-  CASE 'batch'     -%]<span>satser</span>
[%-  END -%]
[% END %]

 [% INCLUDE 'doc-head-open.inc' %]
 <title>[% FILTER collapse %]
 [% PROCESS translate_card_element element=card_element_title %] &rsaquo;
 [% t("Patron card creator") | html %] &rsaquo;
 [% t("Tools") | html %] &rsaquo;
 [% t("Koha") | html %]
 [% END %]</title>
 [% INCLUDE 'doc-head-close.inc' %]
</head>

<body id="pcard_manage" class="tools pcard">
 [% WRAPPER 'header.inc' %]
 [% INCLUDE 'cat-search.inc' %]
[% END %]

 [% WRAPPER 'sub-header.inc' %]
 [% WRAPPER breadcrumbs %]
 [% WRAPPER breadcrumb_item %]
 <a href="/cgi-bin/koha/tools/tools-home.pl">Verktyg</a>
 [% END %]
 [% WRAPPER breadcrumb_item %]
 <a href="/cgi-bin/koha/patroncards/home.pl">Lånekortsverktyg</a>
 [% END %]
 [% WRAPPER breadcrumb_item bc_active= 1 %]
 [% PROCESS translate_card_element element=card_element_title %]
 [% END %]
 [% END #/ WRAPPER breadcrumbs %]
 [% END #/ WRAPPER sub-header.inc %]

 <div class="main container-fluid">
 <div class="row">
 <div class="col-md-10 order-md-2 order-sm-1">
 <main>
 [% INCLUDE 'messages.inc' %]

 [% INCLUDE 'patroncards-toolbar.inc' %]

 <h1>[% PROCESS translate_card_element element=card_element_title %]</h1>

 [% INCLUDE 'patroncards-errors.inc' %]
 <div id="manage-patroncards-layouts">
 [% IF ( table_loop ) %]
 <form method="get" name="layouts" action="/cgi-bin/koha/manage.pl?card_element=[% card_element | html %]">
 <div class="page-section">
 <table>
 [% FOREACH table_loo IN table_loop %]
 [% IF ( table_loo.header_fields ) %]
 <tr>
 [% FOREACH header_field IN table_loo.header_fields %]
 [% SWITCH header_field.field_label -%]
 [%-  CASE 'Layout ID'     -%]<th>Layout-ID</th>
 [%-  CASE 'Layout'        -%]<th>Layout</th>
 [%-  CASE 'Action'        -%]<th>Åtgärd</th>
 [%-  CASE 'Actions'       -%]<th class="noExport">Åtgärder</th>
 [%-  CASE 'Select'        -%][% IF ( print ) %]<th>Välj</th>[% END %]
 [%-  CASE 'Template ID'   -%]<th>Mall-ID</th>
 [%-  CASE 'Template Name' -%]<th>Mallnamn</th>
 [%-  CASE 'Description'   -%]<th>Beskrivning</th>
 [%-  CASE 'Profile ID'    -%]<th>Profil-ID</th>
 [%-  CASE 'Printer Name'  -%]<th>Skrivarnamn</th>
 [%-  CASE 'Paper Bin'     -%]<th>Papperskorg</th>
 [%-  CASE 'Batch ID'      -%]<th>Sats-ID</th>
 [%-  CASE 'Patron Count'  -%]<th>Låntagarräknare</th>
 [%-  CASE                 -%]<th>[% header_field.field_label | html %]</th>
 [% END -%]
 [% END %]
 </tr>
 [% ELSE %]
 <tr>
 [% FOREACH text_field IN table_loo.text_fields %]
 [% IF ( text_field.select_field ) %]
 <td>
 <a class="btn btn-default btn-xs" href="/cgi-bin/koha/patroncards/edit-[% card_element | html %].pl?op=edit_form&element_id=[% text_field.field_value | html %]"><i class="fa-solid fa-pencil" aria-hidden="true"></i> Redigera</a>
 [% IF ( print ) %]
 <a class="btn btn-default btn-xs export" data-batch-id="[% text_field.field_value |url %]" href="/cgi-bin/koha/patroncards/print.pl?batch_id=[% text_field.field_value |url %]"><i class="fa-solid fa-share-from-square"></i> Exportera</a>
 [% END %]
 <a class="btn btn-default btn-xs delete" href="#" data-element-id="[% text_field.field_value | html %]"><i class="fa fa-trash-can"></i> Ta bort</a>
 </td>
 [% IF ( print ) %]
 <td><input type="checkbox" name="action" value="[% text_field.field_value | html %]" /></td>
 [% END %]
 [% ELSIF ( text_field.field_value ) %]
 <td>[% text_field.field_value | html %]</td>
 [% ELSE %]
 <td>&nbsp;</td>
 [% END %]
 [% END %]
 </tr>
 [% END %]
 [% END %]
 </table>
 </div> <!-- /.page-section -->
 [% IF ( print ) %]
 <fieldset class="action">
 <input class="btn btn-primary" id="print" type="button" value="Exportera valda satser" />
 </fieldset>
 [% END %]

 [% IF patron_lists %]
 <fieldset class="rows">
 <legend>Exportera från låntagarlista</legend>
 <ol>
 <li>
 <label for="patron_list_id">Låntagarlista: </label>
 <select id="patron_list_id" name="patron_list_id">
 <option value=""></option>
 [% FOREACH pl IN patron_lists %]
 <option value="[% pl.patron_list_id | html %]">[% pl.name | html %]</option>
 [% END %]
 </select>
 </li>
 </ol>
 </fieldset>
 <fieldset class="action">
 <input class="btn btn-primary" id="printlist" type="button" value="Exportera från låntagarlista" />
 </fieldset>
 [% END %]
 </form>
 <form id="manage_form" method="post" action="/cgi-bin/koha/patroncards/manage.pl">
 [% INCLUDE 'csrf-token.inc' %]
 <input type="hidden" name="op" value="cud-" />
 </form>

 [% ELSE %]
 <div class="alert alert-info">
 <h4>Inga [% PROCESS translate_card_element element=card_element_title %] finns tillgängliga för tillfället.</h4>
 <p>Använd verktygsraden ovan för att skapa en ny [% PROCESS translate_card_element element=card_element %].</p></div>
 [% END %]
 </div>

 </main>
 </div> <!-- /.col-md-10.order-md-2 -->

 <div class="col-md-2 order-sm-2 order-md-1">
 <aside>
 [% INCLUDE 'tools-menu.inc' %]
 </aside>
 </div> <!-- /.col-md-2.order-md-1 -->
 </div> <!-- /.row -->

[% MACRO jsinclude BLOCK %]
 [% INCLUDE 'greybox.inc' %]
 <script>
        function DeleteConfirm() {
            var element_ids = selected_layouts("delete");

            var msg;
            if (element_ids.length > 1) {
                msg = _("Är du säker på att du vill ta bort %s %s?").format(element_ids.length, "[% PROCESS translate_card_elements element=card_element %]");
            } else if (element_ids.length == 1) {
                msg = _("Är du säker på att du vill ta bort %s %s?").format("[% PROCESS translate_card_element element=card_element %]", element_ids[0]);
            }

            if (msg && confirm(msg)) {
                var elements = "";
                for (var i = 0; i < element_ids.length; i++) {
                    if (element_ids[i] > -1) {
                        elements += element_ids[i] + ","
                    }
                    else {
                        return;     // no layout selected
                    }
                }

                window.location = "/cgi-bin/koha/patroncards/manage.pl?op=delete&card_element=[% card_element | html %]&element_id=" + elements;
            }
            else {
                return; // abort delete
            }

        };

        function Edit() {
            var element_id = selected_layouts("edit");
            if (element_id>-1) {
                window.location = "/cgi-bin/koha/patroncards/edit-[% card_element | html %].pl?op=edit&element_id=" + element_id;
            }
            else {
                return;     // no layout selected
            };
        };
        function Xport() {
            batches= new Array;
            if(document.layouts.action.length > 0) {
                for (var i=0; i < document.layouts.action.length; i++) {
                    if (document.layouts.action[i].checked) {
                        batches.push("batch_id=" +  document.layouts.action[i].value);
                    }
                }
                if (batches.length < 1) {
                    alert(_("Välj minst en sats att exportera."));
                    return;     // no batch selected
                }
                getstr = batches.join("&");
            }
            else if (document.layouts.action.checked) {
                getstr = "batch_id="+document.layouts.action.value;
            }
            else {
                alert(_("Välj minst en sats att exportera."));
                return;     // no batch selected
            }
            return GB_showCenter(_("Exportera lånekort"), "/cgi-bin/koha/patroncards/print.pl?" + getstr, 400, 800);
        };

        function XportPatronlist() {
            if ( patron_list_id.value.length < 1 ) {
                alert(_("Välj en låntagarlista."));
                return;     // no patron list selected
            }
            getstr = 'patronlist_id='+patron_list_id.value;
            return GB_showCenter(_("Exportera lånekort från lista"), "/cgi-bin/koha/patroncards/print.pl?" + getstr, 700, 800);
        };

        function selected_layout(op) {
            if (document.layouts.action.length) {
                var selected = new Array();
                for (i=0;i<document.layouts.action.length;i++){
                    if (document.layouts.action[i].checked){
                        selected.push(i);
                    }
                };
                if (selected.length == 1 || (op == "delete" && selected.length >= 1)) {
                    if (op == "delete") {
                        var selectedDelete = new Array;
                        for (i = 0; i < selected.length; i++) {
                            selectedDelete.push(document.layouts.action[selected[i]].value);
                        }
                        return(selectedDelete);
                    } else {
                        // op == 'edit' returns only the object and not list
                        return(document.layouts.action[selected[0]].value);
                    }
                }
                else if (selected.length < 1) {
                    if (op == "edit") {
                        alert(_("Välj en %s för %s.").format("[% PROCESS translate_card_element element=card_element %]", op));
                    } else {
                        alert(_("Välj minst en %s för %s.").format("[% PROCESS translate_card_element element=card_element %]", op));
                    }
                    return (-1);
                }
                else {
                    alert(_("Välj bara en %s för %s.").format("[% PROCESS translate_card_element element=card_element %]", op));
                    return (-1);
                }
            }
            else {
                if (document.layouts.action.checked){
                    return([document.layouts.action.value]);
                }
            };
            alert(_("Var vänlig välj %s.").format("[% PROCESS translate_card_element element=card_element %]"));
            return (-1);
        };

        $(document).ready(function() {
            $("#edit").click(function(){
                Edit();
                return false;
            });
            $("#print").click(function(){
                Xport();
                return false;
            });
            $("#printlist").click(function(){
                XportPatronlist();
                return false;
            });
            $(".delete").on("click", function(){
                if( confirmDelete( _("Är du säker på att du vill ta bort det här?") ) ) {
                    $('#manage_form input[name="op"]').val('cud-delete');
                    $('#manage_form').append( '<input type="hidden" name="card_element" value="[% card_element | html %]" />' );
                    var id = $(this).data('element-id');
                    $('#manage_form').append( '<input type="hidden" name="element_id" value="' + id + '" />' );
                    $('#manage_form').submit();
                }
            });
            $(".export").on("click", function(e){
                e.preventDefault();
                var batch_id = $(this).data("batch-id");
                GB_showCenter( _("Exportera en enskild sats"),'/cgi-bin/koha/patroncards/print.pl?batch_id='+batch_id, 400, 800);
            });
        });
    </script>
[% END %]

[% INCLUDE 'intranet-bottom.inc' %]
